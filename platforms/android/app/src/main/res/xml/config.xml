<?xml version='1.0' encoding='utf-8'?>
<widget id="com.example.hello" version="1.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <feature name="Whitelist">
        <param name="android-package" value="org.apache.cordova.whitelist.WhitelistPlugin" />
        <param name="onload" value="true" />
    </feature>
    <feature name="AppVersion">
        <param name="android-package" value="uk.co.whiteoctober.cordova.AppVersion" />
    </feature>
    <feature name="StatusBar">
        <param name="android-package" value="org.apache.cordova.statusbar.StatusBar" />
        <param name="onload" value="true" />
    </feature>
    <feature name="SplashScreen">
        <param name="android-package" value="org.apache.cordova.splashscreen.SplashScreen" />
        <param name="onload" value="true" />
    </feature>
    <feature name="InAppBrowser">
        <param name="android-package" value="org.apache.cordova.inappbrowser.InAppBrowser" />
    </feature>
    <feature name="CDVOrientation">
        <param name="android-package" value="cordova.plugins.screenorientation.CDVOrientation" />
    </feature>
    <feature name="Insomnia">
        <param name="android-package" value="nl.xservices.plugins.Insomnia" />
    </feature>
    <feature name="HotCodePush">
        <param name="android-package" value="com.nordnetab.chcp.main.HotCodePushPlugin" />
        <param name="onload" value="true" />
    </feature>
    <feature name="File">
        <param name="android-package" value="org.apache.cordova.file.FileUtils" />
        <param name="onload" value="true" />
    </feature>
    <allow-navigation href="cdvfile:*" />
    <feature name="FileTransfer">
        <param name="android-package" value="org.apache.cordova.filetransfer.FileTransfer" />
    </feature>
    <name>小快播</name>
    <description>书中自有颜如玉</description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <chcp>
        <auto-download enabled="true" />
        <auto-install enabled="true" />
        <native-interface version="12" />
        <config-file url="https://cdn.zggeda.com/chcp.json" />
    </chcp>
    <allow-intent href="market:*" />
    <icon density="ldpi" src="res/icon/android/Icon-48.png" />
    <icon density="mdpi" src="res/icon/android/Icon-96.png" />
    <icon density="hdpi" src="res/icon/android/Icon-144.png" />
    <icon density="xhdpi" src="res/icon/android/Icon-512.png" />
    <splash density="land-hdpi" src="res/screen/android/drawable-port-hdpi/480X800.png" />
    <splash density="land-ldpi" src="res/screen/android/drawable-port-ldpi/200X320.png" />
    <splash density="land-mdpi" src="res/screen/android/drawable-port-mdpi/320X480.png" />
    <splash density="land-xhdpi" src="res/screen/android/drawable-port-xhdpi/720X1280.png" />
    <splash density="land-xxhdpi" src="res/screen/android/drawable-port-xxhdpi/960X1600.png" />
    <splash density="land-xxxhdpi" src="res/screen/android/drawable-port-xxxhdpi/1280X1920.png" />
    <splash density="port-hdpi" src="res/screen/android/drawable-port-hdpi/480X800.png" />
    <splash density="port-ldpi" src="res/screen/android/drawable-port-ldpi/200X320.png" />
    <splash density="port-mdpi" src="res/screen/android/drawable-port-mdpi/320X480.png" />
    <splash density="port-xhdpi" src="res/screen/android/drawable-port-xhdpi/720X1280.png" />
    <splash density="port-xxhdpi" src="res/screen/android/drawable-port-xxhdpi/960X1600.png" />
    <splash density="port-xxxhdpi" src="res/screen/android/drawable-port-xxxhdpi/1280X1920.png" />
    <preference name="loglevel" value="DEBUG" />
    <preference name="loadUrlTimeoutValue" value="60000" />
    <preference name="AutoHideSplashScreen" value="true" />
    <preference name="FadeSplashScreen" value="true" />
    <preference name="StatusBarOverlaysWebView" value="true" />
    <preference name="StatusBarBackgroundColor" value="#ffb910" />
    <preference name="StatusBarStyle" value="lightcontent" />
</widget>
